    //- Add your site or application content here

    .col-md-8.col-md-offset-2
      .page-header
        h1 Whiteboard

    .row
      .col-md-offset-3
        canvas#whiteboard(width='670', height='500')

      .col-md-offset-3

    .row 
      .col-md-4.col-md-offset-3
        table.table.table-hover#users
          thead
            tr
              th Name
              th Color
          tbody
            for user in users
              tr(id='#{user.id}')
               td #{user.name}
               td #{user.color}


    include includes/welcome-modal

  script(type="text/javascript", src="//code.jquery.com/jquery-1.11.0.min.js")
